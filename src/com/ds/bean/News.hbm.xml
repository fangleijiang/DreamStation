<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.ds.bean.News" table="news">
		<id name="id" column="id" type="int">
			<generator class="increment" />
		</id>
		<property name="title" column="title" type="string"></property>
		<property name="content" column="content" type="string"></property>
		<property name="date" column="date" type="date"></property>
		<property name="author" column="author" type="string"></property>
		<property name="account" column="account" type="int"></property>
	</class>
</hibernate-mapping>